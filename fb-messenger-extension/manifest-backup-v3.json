{
  "manifest_version": 3,
  "name": "@fred Messenger Bot - Simple",
  "version": "2.0.0",
  "description": "Simple @fred bot for Facebook Messenger",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "host_permissions": [
    "*://*.messenger.com/*",
    "*://*.facebook.com/*"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "@fred Bot Settings"
  },
  
  "content_scripts": [
    {
      "matches": ["*://*.messenger.com/*", "*://*.facebook.com/*"],
      "js": ["content-simple.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ]
}