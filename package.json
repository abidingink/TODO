{
  "name": "fred-messenger",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "description": "Facebook Messenger AI Assistant - Fred",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:client\"",
    "dev:api": "node scripts/local-api-server.js",
    "dev:client": "vite",
    "dev:worker": "cd worker && npx wrangler dev --local --port 8787",
    "build": "vite build",
    "build:worker": "cd worker && npx wrangler deploy --dry-run",
    "deploy:worker": "cd worker && npx wrangler deploy",
    "preview": "vite preview",
    "test:webhook": "node scripts/test-webhook.js"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231218.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.2",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "wrangler": "^3.22.0"
  }
}
